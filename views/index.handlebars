
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Eat Da Burger!!</h1>
    </div>
</div>
<div class="container">
<img src="../public/assets/img/burger.11.jpg" alt="burger">
</div>
<div class="container">
    <div class="row">
        <div class="col s6 col-left">
            {{#each burgers}}
            {{#unless this.devoured}}
            <div>
                <form action="/burgers/{{id}}" method="PUT">
                    <button type="submit" class="btn btn-warning" aria-pressed="true">{{this.burger_name}}</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </div>

        <div class="col s6 col-right">
            {{#each burgers}}
            {{#if this.devoured}}
            {{this.burger_name}}
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>
<div class="container">
<form class="form-inline create-form" id="create-burger" action="/burgers" method="POST">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="burger" id="name" name="burger_name">
    </div>
    <button type="submit" class="btn btn-secondary lg">Add Burger</button>
</form>
</div>